@model IEnumerable<SpartanSpots.Models.Business>
@using SpartanSpots.Helpers
@{
    ViewBag.Title = "Index";
   
}

<h2>Listings</h2>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
@{
  Html.RenderPartial("../Search/SearchBarPartial");
}
<table>
    <tr>
        <td>Restaurants</td>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Name.ToString(), "Details", new { id=item.Id })
        </td>
    </tr>
    <tr>
        <td>
            @HtmlExtensions.TotalRating(item.Id)
        </td>
    </tr>
}

    @Html.Raw(ViewBag.TopThreeResturaunts)
    @Html.Raw(ViewBag.TopThreeBars)
</table>
